!!!
%html
  %head
    %title Gear VR Games
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

    %meta{:content => "oo8NXM2PsT4gJXuAPht_y_r7s3hUzxoQ_ejrskh8WKY", :name => "google-site-verification"}

    %link{ href: 'https://fonts.googleapis.com/css?family=Ubuntu:700|Permanent+Marker', rel: 'stylesheet', type: 'text/css' }
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-78814739-1', 'auto');
      ga('send', 'pageview');
  %body.overflow-x-hidden{ class: params[:controller] + "-" + params[:action] }
    .row
      .col-xs-12.no-padding.site-nav
        = link_to 'The VR Machine', root_url, class: 'logo'
        =# link_to 'Gear VR News', posts_tag_path('gear-vr-news'), class: 'nav-links'
        =# link_to 'Top 10 Gear VR Games', posts_tag_path('top-list'), class: 'nav-links'
        = link_to 'Search Gear VR', root_url, class: 'nav-links'
        - if current_user && current_user.email == 'yangsunwoo@gmail.com'
          = link_to 'New Game', new_game_path
          = link_to 'New Post', new_post_path

    .container
      = yield